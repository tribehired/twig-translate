{
    "name": "wannfq/twig-locale",
    "description": "Twig extension for text localization.",
    "require": {
        "twig/twig": "^2.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Wann Afiq",
            "email": "wannfq@tribehired.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TribeHired\\TwigLocale\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TribeHired\\TwigLocale\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "test": "phpunit --configuration ./phpunit.xml ./tests",
        "lint": "phpcs --standard=PSR2 --parallel=3 -p src/",
        "lint-fix": "phpcbf --standard=PSR2 --parallel=3 -p src/"
    }
}
